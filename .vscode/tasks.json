{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build YuGiOh",
			"type": "shell",
			"command": "g++",
			"args": [
				"-std=c++17",
				"-Wall",
				"-Wextra",
				"-Iinclude",
				"src/*.cpp",
				"-o",
				"bin/YuGiOh.exe"
			],
			"group": "build",
			"problemMatcher": [
				"$gcc"
			],
			"isBackground": false
		}
	]
}